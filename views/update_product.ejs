<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->


<div class="main container">
    <!-- header ends -->
    <a href="/" class='btn btn-primary'>All Products</a>
    <h1>Update Product</h1>
    <!-- form -->
    <form id="temp" method="POST">
      <div class="form-group">
        <label for="productName">Product Name</label>
        <input type="hidden" name="id" value= "<%=product._id%>" >
        <input required type="text" value="<%=product.productName%>" class="form-control" name="productName" id="productName" aria-describedby="Product Name" placeholder="Enter Product Name">
      </div>
    
      <div class="form-group">
        <label for="productDescription">Product Description</label>
        <textarea  type="text" name="productDescription" value="<%=product.productDescription%>" class="form-control" id="productDescription" aria-describedby="Product Description" placeholder="Enter Product Description"></textarea>
      </div>
      
      <div class="form-group">
        <label for="productPriceNew">New Product Price</label>
        <input required value="<%=product.productPriceNew%>" type="number" name="productPriceNew" class="form-control" id="productPriceNew" placeholder="Enter New Price">
      </div>
    
      <div class="form-group">
          <label for="productPriceOld">Old Product Price</label>
          <input value="<%=product.productPriceOld%>" type="number" name="productPriceOld" class="form-control" id="productPriceOld" placeholder="Enter Old Price">
      </div>
    
      <div class="form-check">
        <input <%=product.isAvailable?'checked':''%> type="checkbox" name="isAvailable" class="form-check-input" id="isAvailable">
        <label  class="form-check-label" for="isAvailable">Product Available</label>
      </div>
      <button type="submit" id="submit" class="btn btn-primary">Submit</button>
    </form>
    
</div>



<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->