<form action="/api/products" method="POST">
  <div class="form-group">
    <label for="productName">Product Name</label>
    <input type="hidden" name="id" value="">
    <input required type="text" class="form-control" name="productName" id="productName" aria-describedby="Product Name" placeholder="Enter Product Name">
  </div>

  <div class="form-group">
    <label for="productDescription">Product Description</label>
    <textarea rows="3" type="text" name="productDescription" class="form-control" id="productDescription" aria-describedby="Product Description" placeholder="Enter Product Description"></textarea>
  </div>
  
  <div class="form-group">
    <label for="productPriceNew">New Product Price</label>
    <input required type="number" name="productPriceNew" class="form-control" id="productPriceNew" placeholder="Enter New Price">
  </div>

  <div class="form-group">
      <label for="productPriceOld">Old Product Price</label>
      <input type="number" name="productPriceOld" class="form-control" id="productPriceOld" placeholder="Enter Old Price">
  </div>

  <div class="form-check">
    <input type="checkbox" name="isAvailable" class="form-check-input" id="isAvailable">
    <label class="form-check-label" for="isAvailable">Product Available</label>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>